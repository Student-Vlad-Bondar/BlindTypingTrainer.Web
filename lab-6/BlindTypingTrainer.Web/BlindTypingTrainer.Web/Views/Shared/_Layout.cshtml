<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlindTypingTrainer.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/achievements.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlindTypingTrainer.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a asp-controller="Home" asp-action="Index" class="logo">Blind Typing Trainer</a>
            <ul class="nav-menu">
                <a asp-controller="Home" asp-action="Index">Уроки</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <span>Hello, @User.Identity.Name!</span>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Admin" asp-action="Index">Адмін</a>
                    }
                    else
                    {
                        <a asp-controller="Achievement" asp-action="Index">Досягнення</a>
                        <a asp-controller="Account" asp-action="Profile">Профіль</a>
                    }
                    <a asp-controller="Account" asp-action="Logout">Вихід</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login">Вхід</a>
                    <a asp-controller="Account" asp-action="Register">Реєстрація</a>
                }
            </ul>
        </nav>
    </header>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>© 2025 BlindTypingTrainer</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
