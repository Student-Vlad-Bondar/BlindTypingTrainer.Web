@model BlindTypingTrainer.Web.ViewModels.TypingViewModel

<h2>Тренування</h2>

<div class="hand-placement">
    <img src="~/images/hand-placement.png" alt="Правильне розташування пальців" />
</div>
<div class="typing-container">
    <div id="stageText" class="stage-text"></div>
    <textarea id="inputBox" rows="3" cols="60" autofocus></textarea>
</div>
<div class="stats">
    <span>Етап: <b id="stageNum">1</b> / @Model.Stages.Count</span>
</div>
<button id="finish" style="display:none">Завершити</button>

@* Перед підключенням скриптів згенеруємо глобальну змінну *@
<script>
    window.typingStages = @Html.Raw(Json.Serialize(Model.Stages));
    // збережемо SessionId для форми Finish
    const sidInput = document.createElement("input");
    sidInput.type = "hidden";
    sidInput.id = "sessionId";
    sidInput.value = "@Model.SessionId";
    document.body.appendChild(sidInput);
</script>
<script src="~/js/typing.js"></script>