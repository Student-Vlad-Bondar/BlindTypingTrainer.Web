@model BlindTypingTrainer.Web.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Реєстрація";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div asp-validation-summary="All" class="validation-summary"></div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="field-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="field-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="field-validation"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="field-validation"></span>
    </div>

    <button type="submit" class="btn">Зареєструватися</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
