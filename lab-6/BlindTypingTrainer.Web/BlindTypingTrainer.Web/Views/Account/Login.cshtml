@model BlindTypingTrainer.Web.ViewModels.LoginVM

@{
    ViewData["Title"] = "Вхід";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="validation-summary"></div>
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" required />
        <span asp-validation-for="UserName" class="field-validation text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" required />
        <span asp-validation-for="Password" class="field-validation text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn">Увійти</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
