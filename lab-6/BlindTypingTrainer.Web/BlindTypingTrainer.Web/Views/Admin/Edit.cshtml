@model BlindTypingTrainer.Web.Models.Lesson
@using BlindTypingTrainer.Web.Models

@{
    ViewData["Title"] = "Редагувати урок";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Text"></label>
        <textarea asp-for="Text" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Difficulty"></label>
        <select asp-for="Difficulty" class="form-control"
                asp-items="Html.GetEnumSelectList<Difficulty>()">
            <option value="">-- Виберіть складність --</option>
        </select>
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
