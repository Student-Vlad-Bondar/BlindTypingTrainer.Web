@model BlindTypingTrainer.Web.ViewModels.LessonListViewModel
@using BlindTypingTrainer.Web.Models

<h1>Уроки сліпого друку</h1>

<form method="get" class="filter-form">
    <label>
        Складність:
        <select name="difficulty" onchange="this.form.submit()">
            <option value="">Всі</option>
            @foreach (var d in ViewBag.Difficulties as Difficulty[])
            {
                <option value="@d" selected="@(ViewBag.Selected==d ? "selected" : null)">
                    @d
                </option>
            }
        </select>
    </label>
</form>

<ul class="lesson-list">
    @foreach (var lesson in Model.Lessons)
    {
        <li>
            <a asp-controller="Typing"
               asp-action="Index"
               asp-route-lessonId="@lesson.Id">
                @lesson.Title (@lesson.Difficulty)
            </a>
        </li>
    }
</ul>
